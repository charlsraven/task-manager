<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/taskCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        style="@style/custom_checkbox_style"
        android:textColor="#001018"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/taskCheck"
        app:layout_constraintTop_toBottomOf="@id/taskCheck">

        <ImageView
            android:id="@+id/ivCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/set_deadline"
            android:textColor="#1D3557" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/llDateTime"
        app:layout_constraintStart_toStartOf="@+id/llDateTime"
        app:layout_constraintTop_toBottomOf="@+id/llDateTime">

        <ImageView
            android:id="@+id/ivDesc"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:paddingStart="10dp"
            android:scaleType="center"
            app:srcCompat="@drawable/description" />

        <EditText
            android:id="@+id/taDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top|start"
            android:hint="@string/task_description"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="6"
            android:overScrollMode="always"
            android:paddingStart="10dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColorHint="#1D3557"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="SubTask Name"
        android:textColor="#1D3557"
        app:layout_constraintBottom_toBottomOf="@+id/taskCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/taskCheck"
        app:layout_constraintTop_toTopOf="@+id/taskCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>