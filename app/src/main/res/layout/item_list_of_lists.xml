<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">
    <!--    android:background="@color/task_back_color">-->


    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/move_list_up_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subname"
        app:layout_constraintStart_toStartOf="@+id/list_name"
        app:layout_constraintTop_toBottomOf="@id/list_name" />

    <ImageButton
        android:id="@+id/move_list_up_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/task_back_color"
        android:contentDescription="@string/move_above"
        android:src="@drawable/arrow_drop_up_svgrepo_com"
        app:layout_constraintStart_toEndOf="@+id/list_name"
        app:layout_constraintEnd_toStartOf="@+id/move_list_down_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/move_list_down_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/task_back_color"
        android:src="@drawable/arrow_drop_down_svgrepo_com"
        app:layout_constraintStart_toEndOf="@+id/move_list_up_button"
        app:layout_constraintEnd_toStartOf="@+id/delete_list_button"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/delete_list_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/task_back_color"
        android:src="@drawable/delete_svgrepo_com"
        app:layout_constraintStart_toEndOf="@id/move_list_down_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>