<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF5F7">

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subname"
        app:layout_constraintBottom_toBottomOf="@+id/delete_list_button"
        app:layout_constraintLeft_toLeftOf="@id/list_name" />

    <ImageButton
        android:id="@+id/move_list_up_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="#DEF5F7"
        android:contentDescription="@string/move_above"
        android:src="@drawable/arrow_drop_up_svgrepo_com"
        app:layout_constraintEnd_toStartOf="@id/move_list_down_button"
        app:layout_constraintTop_toTopOf="@id/list_name" />

    <ImageButton
        android:id="@+id/move_list_down_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="#DEF5F7"
        android:src="@drawable/arrow_drop_down_svgrepo_com"
        app:layout_constraintEnd_toStartOf="@id/delete_list_button"
        app:layout_constraintTop_toTopOf="@id/list_name" />

    <ImageButton
        android:id="@+id/delete_list_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="#DEF5F7"
        app:layout_constraintHorizontal_bias="1"
        android:src="@drawable/delete_svgrepo_com"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_name" />


</androidx.constraintlayout.widget.ConstraintLayout>